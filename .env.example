
# Cosmic Nexus Environment Configuration

# Network Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WEBSOCKET_URL=ws://localhost:8001
VITE_NETWORK=devnet  # devnet, testnet, mainnet

# Docker VMIA Configuration
VMIA_DOCKER_IMAGE=cosmicnexus/vmia:latest
VMIA_CPU_LIMIT=70
VMIA_MEMORY_LIMIT=60
VMIA_AUTO_UPDATE=true

# Wallet Configuration
WALLET_ADDRESS=your_solflare_address

# Validator Configuration
VALIDATOR_IDENTITY_PATH=/path/to/validator-keypair.json
VALIDATOR_VOTE_ACCOUNT_PATH=/path/to/vote-account-keypair.json
VALIDATOR_LEDGER_PATH=/path/to/ledger

# API Keys (Do not commit actual keys to repository)
JWT_SECRET=your_jwt_secret_here
SOLANA_RPC_URL=https://api.devnet.solana.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cosmicnexus

# Redis Configuration (for WebSocket)
REDIS_URL=redis://localhost:6379

# Log Configuration
LOG_LEVEL=info  # debug, info, warn, error
